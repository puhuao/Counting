<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    <TextView
        android:id="@+id/area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="区域"
android:drawableTop="@drawable/img_location_normal"
        android:drawablePadding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/goods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="商品"
        android:drawableTop="@drawable/img_good_normal"
        android:drawablePadding="5dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="时间"
        android:drawableTop="@drawable/img_time_normal"
        android:drawablePadding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="渠道"
        android:drawableTop="@drawable/img_chain_normal"
        android:drawablePadding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="指标"
        android:drawableTop="@drawable/img_index_normal"
        android:drawablePadding="5dp"
        android:gravity="center"/>

</LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"></ListView>
</LinearLayout>